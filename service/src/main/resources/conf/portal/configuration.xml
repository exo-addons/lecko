<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
    xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

 <component>
      <key>org.exoplatform.addons.lecko.DataBuilder</key>
      <type>org.exoplatform.addons.lecko.SimpleDataBuilder</type>
  </component>
    <component>
      <key>org.exoplatform.addons.lecko.rest.LeckoRestService</key>
       <type>org.exoplatform.addons.lecko.rest.LeckoRestService</type>
  </component>
  <component>
      <key>org.exoplatform.addons.lecko.LeckoServiceController</key>
      <type>org.exoplatform.addons.lecko.LeckoServiceController</type>
  </component>
  <component>
		<key>org.exoplatform.addons.lecko.social.client.rest.connector.ExoSocialConnector</key>
		<type>org.exoplatform.addons.lecko.social.client.rest.connector.ExoSocialConnectorImpl</type>
		<init-params>
			<value-param>
				<name>username</name>
				<value>${exo.api-access.user}</value>
			</value-param>
			<value-param>
				<name>password</name>
				<value>${exo.api-access.password}</value>
			</value-param>
         <value-param>
				<name>baseUrl</name>
				<value>${exo.api-access.baseUrl}</value>
			</value-param>
		</init-params>
  </component>
  <external-component-plugins>
     <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
     <component-plugin profiles="all">
     <name>AddCronJob</name>
     <set-method>addCronJob</set-method>
     <type>org.exoplatform.services.scheduler.CronJob</type>
      <description>add a send weekly notification job to the JobSchedulerService</description>
      <init-params>
        <properties-param>
          <name>cronjob.info</name>
          <description>Configuration for weekly send notification</description>
          <property name="jobName" value="LeckoJob"/>
          <property name="groupName" value="LeckoJob"/>
          <property name="job" value="org.exoplatform.addons.lecko.job.LeckoJob"/>
          <property name="expression" value="${exo.LeckoJob.expression:0 0/2 * * * ?}"/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>


</configuration>
